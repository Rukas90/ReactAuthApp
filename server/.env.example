
APP_NAME=SecureDashboard
# "development" | "production"
NODE_ENV=development
# "debug: 0" | "info: 1" | "warn: 2" | "error: 3" | "silent: 4"
LOG_LEVEL=debug
# Server running port
SERVER_PORT=3000

# Base URL of the API server. The port here should be the same as the 'SERVER_PORT' declared above
API_ORIGIN=http://www.127.0.0.1.sslip.io:3000
# Base URL of the frontend client
CLIENT_ORIGIN=http://www.127.0.0.1.sslip.io:5173

# From https://console.cloud.google.com APIs & Services > Credentials
GOOGLE_CLIENT_ID=...-...apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=...
# Must be registered as an authorized redirect URI in the Google app
GOOGLE_REDIRECT_URI=http://www.127.0.0.1.sslip.io:3000/v1/oauth/google/callback

# From https://github.com/settings/applications/new
GITHUB_CLIENT_ID=...
GITHUB_CLIENT_SECRET=...
# Must be registered as the callback URL in the GitHub app
GITHUB_REDIRECT_URI=http://www.127.0.0.1.sslip.io:3000/v1/oauth/github/callback

SENDER_MAIL_SERVICE=gmail
# For Gmail, use an App Password (https://myaccount.google.com/apppasswords)
SENDER_EMAIL_ADDRESS=...@gmail.com
SENDER_EMAIL_PASSWORD=.... .... .... ....

# Signs and verifies JWT access tokens (min 32 bytes)
JWT_SECRET=[KEY]
# Signs and verifies refresh token lookups (min 32 bytes)
REFRESH_TOKEN_LOOKUP_SECRET=[KEY]
# AES-256 master key used to encrypt TOTP secrets (exactly 32 bytes)
TOTP_SECRET_AES_256_MASTER_KEY=[KEY]
# Signs cookie payloads (min 32 bytes)
COOKIE_SECRET=[KEY]
# Signs Express session cookie (min 32 bytes)
SESSION_SECRET=[KEY]
# Signs and verifies verification token lookups (min 32 bytes)
VERIFICATION_LOOKUP_SECRET=[KEY]
# AES-256 master key used to encrypt verification dispatch payloads (exactly 32 bytes)
PAYLOAD_SECRET_AES_256_MASTER_KEY=[KEY]
# Signs CSRF token signatures (min 32 bytes)
CSRF_SECRET=[KEY]
# From https://dash.hcaptcha.com > Sites > your site's Settings
CAPTCHA_SECRET=ES_...
# PostgreSQL connection string. Replace [PASSWORD] and [DB] with your actual values.
# See https://pris.ly/d/connection-strings for all options
DATABASE_URL="postgres://postgres:[PASSWORD]@localhost:5432/[DB]?schema=public"